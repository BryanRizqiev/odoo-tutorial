<odoo>
  <record id="test_model_action" model="ir.actions.act_window">
      <field name="name">Estate Property</field>
      <field name="context">{"search_default_filter_available": 1}</field>
      <field name="res_model">estate.property</field>
      <field name="view_mode">list,form,kanban</field>
  </record>

  <record id="view_list_property" model="ir.ui.view">
      <field name="name">estate.property.list</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
          <list decoration-muted="state == 'sold'" decoration-success="state == 'offer_accepted'" decoration-warning="state == 'offer_received'">
              <field name="name"/>
              <field name="description"/>
              <field name="property_type_id"/>
              <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
              <field name="postcode"/>
              <field name="date_availability" invisible="True"/>
              <field name="expected_price"/>
              <field name="selling_price"/>
              <field name="bedrooms"/>
              <field name="living_area"/>
              <field name="facades"/>
              <field name="garage"/>
              <field name="garden"/>
              <field name="garden_area"/>
              <field name="garden_orientation"/>
          </list>
      </field>
  </record>

  <record id="view_search_property" model="ir.ui.view">
      <field name="name">estate.property.search</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
          <search>
              <field name="name" string="Property Name"/>
              <field name="postcode" string="Postcode"/>
              <field name="bedrooms" string="Bedrooms"/>
              <field name="expected_price" string="Expected price"/>
              <field name="selling_price" string="Selling Price"/>
              <field name="living_area" string="Living Area" filter_domain="[('living_area', '>=', 10)]"/>
              <filter name="filter_available" string="Available" domain="[('state', 'in', ['new', 'offer_received'])]"/>
              <filter name="postcode" string="Postcode" context="{'group_by':'postcode', 'residual_visible':True}"/>
          </search>
      </field>
  </record>

  <record id="view_form_property" model="ir.ui.view">
      <field name="name">estate.property.form</field>
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
          <form string="Test">
              <header>
                  <button class="oe_highlight" name="button_sold" type="object" invisible="state == 'sold' or state == 'canceled'" string="SOLD"/>
                  <button class="oe_highlight" name="button_cancel" type="object" invisible="state == 'sold' or state == 'canceled'" string="CANCEL"/>
                  <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" />
              </header>

              <sheet>
                  <group>
                      <group>
                          <div class="oe_title"> 
                            <h1><field name="name"/></h1>
                          </div>
                          <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                      </group>
                      <group>
                          <field name="expected_price"/>
                          <field name="best_offer"/>
                          <field name="selling_price"/>
                      </group>
                      <group>
                          <field name="property_type_id" options="{'no_create': true, 'no_open': true}"/>
                          <field name="postcode" />
                          <field name="date_availability"/>
                      </group>
                      <notebook>
                          <page string="Description">
                              <group>
                                  <field name="description"/>
                                  <field name="bedrooms"/>
                                  <field name="living_area"/>
                                  <field name="facades"/>
                                  <field name="garage"/>
                                  <field name="garden"/>
                                  <field name="garden_area" invisible="not garden"/>
                                  <field name="garden_orientation" string="Garden Orientation" invisible="not garden"/>
                                  <field name="total_area"/>
                              </group>
                          </page>
                          <page string="Offer">
                              <group>
                                  <field name="offer_ids" nolabel="1" options="{'readonly': [('state', 'in', ['offer_accepted', 'sold', 'canceled'])]}" />
                              </group>
                          </page>
                          <page string="Other Info">
                              <group>
                                  <field name="salesman_id"/>
                                  <field name="buyer_id"/>
                              </group>
                          </page>
                      </notebook>
                  </group>
              </sheet>
          </form>
      </field>
  </record>

  <menuitem id="test_menu_root" name="Real Estate">
      <menuitem id="test_first_level_menu" name="Menu">
          <menuitem id="test_model_menu_action" action="test_model_action"/>
      </menuitem>
  </menuitem>
</odoo>